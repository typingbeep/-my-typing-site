body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}
header {
    background-color: #007bff;
    color: white;
    text-align: center;
    padding: 1em;
}
nav a {
    color: white;
    margin: 0 1em;
    text-decoration: none;
}
main {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}
section {
    margin-bottom: 20px;
}
textarea {
    width: 100%;
    margin-top: 10px;
}
button {
    background-color: #28a745;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
}
button:hover {
    background-color: #218838;
}